---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import { cn } from "../lib/utils";

const experience = [
  {
    role: "Student Assistant",
    company: "FAITH Colleges",
    year: "2024",
    current: true,
  },
];

const projects = [
  {
    title: "RespoBilis",
    desc: "A Platform Utilizing Geolocation for Disaster Response & Relief Coordination in Tanauan",
    link: "#",
    tag: "Next.js",
  },
  {
    title: "apt.connect",
    desc: "Property Management System for Apartments to connect landlords and tenants with ease.",
    link: "#",
    tag: "Next.js",
  },
];

const techStack = {
  Frontend: ["React", "Next.js", "TypeScript", "Tailwind CSS"],
  Backend: ["Supabase", "Node.js", "Express.js"],
  Cloud: ["AWS"],
};
---

<Layout>
  <main class="container mx-auto max-w-5xl p-4 md:p-8 space-y-4">
    <!-- Navigation -->
    <nav class="flex justify-end mb-4">
      <a
        href="/projects"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm rounded-lg border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"
          ></path></svg
        >
        Projects
      </a>
    </nav>

    <!-- Header Section -->
    <section class="mb-4 md:mb-8 animate-fade-in">
      <div class="flex flex-col md:flex-row items-center gap-4 md:gap-7">
        <div class="relative shrink-0 animate-scale-in">
          <img
            src="/Avatar.jpg"
            alt="Profile"
            class="w-24 h-24 md:w-40 md:h-40 rounded-md object-cover border-2 md:border-4 border-border shadow-xl"
          />
        </div>
        <div
          class="flex-1 text-center md:text-left space-y-3 md:space-y-4 w-full animate-slide-up animate-delay-200"
        >
          <div>
            <div
              class="flex items-center justify-center md:justify-start gap-2 mb-2"
            >
              <h1 class="text-2xl md:text-4xl font-bold tracking-tight">
                Edric Russell Ramilo
              </h1>
            </div>
            <p
              class="text-sm md:text-base text-muted-foreground flex items-center justify-center md:justify-start gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                ></path><circle cx="12" cy="10" r="3"></circle></svg
              >
              Batangas, Philippines
            </p>
            <p class="text-lg md:text-xl font-medium mt-2">
              Aspiring Cloud Engineer
            </p>
          </div>

          <div
            class="flex flex-wrap justify-center md:justify-start gap-2 md:gap-3"
          >
            <a
              href="mailto:edric.ramilo191@gmail.com"
              class="inline-flex items-center gap-2 px-3 py-2 text-sm md:text-base rounded-lg border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                  d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
              >
              <span class="hidden sm:inline">Send Email</span>
              <span class="sm:hidden">Email</span>
            </a>
            <a
              href="https://www.linkedin.com/in/edric-russell-ramilo/"
              class="inline-flex items-center gap-2 px-3 py-2 text-sm md:text-base rounded-lg border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path><rect width="4" height="12" x="2" y="9"></rect></svg
              >
