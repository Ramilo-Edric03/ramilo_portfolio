    year: "2026",
    current: true,
  },
  {
    role: "Student Assistant",
    company: "FAITH Colleges",
    year: "2025",
    current: true,
  },
];

const projects = [
  {
    title: "RespoBilis",
    desc: "A Platform Utilizing Geolocation for Disaster Response & Relief Coordination in Tanauan",
    link: "#",
