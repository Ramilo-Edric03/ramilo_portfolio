        </div>
      </div>
    </section>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
      <!-- Left Column -->
      <div class="lg:col-span-3 grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- About Section -->
        <Card
          title="About"
          class="md:col-span-2 animate-slide-up animate-delay-100"
        >
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-muted-foreground"
            ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle
              cx="12"
              cy="7"
              r="4"></circle></svg
